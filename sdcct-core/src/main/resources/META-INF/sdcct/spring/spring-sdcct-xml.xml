<?xml version="1.0" encoding="UTF-8"?>
<beans:beans
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!--====================================================================================================
    = OBJECT FACTORIES
    =====================================================================================================-->
    <beans:bean id="objFactoryFhir" class="gov.hhs.onc.sdcct.fhir.ObjectFactory"/>
    
    <beans:bean id="objFactoryFhirImpl" class="gov.hhs.onc.sdcct.fhir.impl.ObjectFactory"/>
    
    <beans:bean id="objFactoryRfd" class="gov.hhs.onc.sdcct.rfd.ObjectFactory"/>
    
    <beans:bean id="objFactoryRfdImpl" class="gov.hhs.onc.sdcct.rfd.impl.ObjectFactory"/>
    
    <beans:bean id="objFactorySdc" class="gov.hhs.onc.sdcct.sdc.ObjectFactory"/>
    
    <beans:bean id="objFactorySdcImpl" class="gov.hhs.onc.sdcct.sdc.impl.ObjectFactory"/>
    
    <!--====================================================================================================
    = CHARACTER ESCAPE HANDLERS
    =====================================================================================================-->
    <beans:bean id="charEscapeHandlerNio" class="com.sun.xml.bind.marshaller.NioEscapeHandler"
        c:charsetName="#{ T(java.nio.charset.StandardCharsets).UTF_8.name() }"/>
    
    <!--====================================================================================================
    = JAXB MARSHALLERS
    =====================================================================================================-->
    <beans:bean id="jaxbMarshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller"
        p:checkForXmlRootElement="false"
        p:supportJaxbElementClass="true">
        <beans:property name="marshallerProperties">
            <beans:map>
                <beans:entry key="#{ T(com.sun.xml.bind.marshaller.CharacterEscapeHandler).name }" value-ref="charEscapeHandlerNio"/>
                <beans:entry key="#{ T(javax.xml.bind.Marshaller).JAXB_ENCODING }" value="#{ T(java.nio.charset.StandardCharsets).UTF_8.name() }"/>
            </beans:map>
        </beans:property>
        <beans:property name="packagesToScan">
            <beans:array>
                <beans:value>#{ objFactoryFhirImpl.class.package.name }</beans:value>
                <beans:value>#{ objFactoryRfdImpl.class.package.name }</beans:value>
                <beans:value>#{ objFactorySdcImpl.class.package.name }</beans:value>
            </beans:array>
        </beans:property>
    </beans:bean>
    
    <beans:bean id="jaxbMarshallerPretty" parent="jaxbMarshaller">
        <beans:property name="marshallerProperties">
            <beans:map merge="true">
                <beans:entry key="com.sun.xml.bind.indentString"
                    value="#{ T(org.apache.commons.lang3.StringUtils).repeat(T(org.apache.commons.lang3.StringUtils).SPACE,
                        T(java.lang.Integer).parseInt('${sdcct.xml.render.format.indent.spaces}')) }"/>
                <beans:entry key="#{ T(javax.xml.bind.Marshaller).JAXB_FORMATTED_OUTPUT }" value="true"/>
            </beans:map>
        </beans:property>
    </beans:bean>
    
    <!--====================================================================================================
    = RENDERERS
    =====================================================================================================-->
    <beans:bean id="rendererXml" class="gov.hhs.onc.sdcct.xml.impl.XmlRenderer" parent="renderer"/>
</beans:beans>